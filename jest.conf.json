{
  "testMatch":            ["**/*-jest.ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.(mt|t|cj|j)s$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.test.json"
      }
    ]
  }
}
