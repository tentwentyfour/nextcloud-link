{
  "compilerOptions": {
    "strict": false,
    "outDir": "./lib",
    "target": "ES6",
    "module": "ES6",

    // enabling esModuleInterop will cause all project using lonad to have to use esModuleInterop
    // as such it is disabled by default,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports":true,
    "moduleResolution": "Node",
    "declaration": true,
  },
  "include": ["./source/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "./lib/**/*",
    "./bundle/**/*",
    "./node_modules/**/*",
    "./tests/**/*",
  ]
}
